<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.club.auth.mapper.UserMapper">
    <!-- 继承BaseMapper后，基础CRUD（增删改查）无需手动编写 -->

    <!-- 示例：自定义查询（根据用户名和密码查询，实际可根据业务扩展） -->
    <select id="selectByUsernameAndPassword" resultType="com.club.common.entity.User">
        SELECT * FROM user
        WHERE username = #{username}
          AND password = #{password}
    </select>
</mapper>